<%- include('./partials/header') %>

<% if (error.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-400 shadow-lg transition-transform duration-300 ease-out hover:scale-105">
        <span class="inline-block mt-1 mb-1 text-white font-semibold">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20 bg-gradient-to-r from-blue-100 via-green-100 to-yellow-100">
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h3 class="text-4xl mb-4 text-green-700 font-bold">
                Welcome to <span class="text-blue-600 font-semibold">Scatch</span>
            </h3>
            <h4 class="text-2xl mb-6 text-green-600">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-green-100 block w-full px-3 py-2 border-[1px] rounded-md mb-4 border-green-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-300 ease-in-out shadow-sm hover:shadow-md hover:bg-green-50"
                    type="text" placeholder="Full Name" name="fullname">
                <input
                    class="bg-green-100 block w-full px-3 py-2 border-[1px] rounded-md mb-4 border-green-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-300 ease-in-out shadow-sm hover:shadow-md hover:bg-green-50"
                    type="email" placeholder="Email" name="email">
                <input
                    class="bg-green-100 block w-full px-3 py-2 border-[1px] rounded-md mb-4 border-green-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-300 ease-in-out shadow-sm hover:shadow-md hover:bg-green-50"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-orange-500 text-white cursor-pointer hover:bg-orange-600 hover:shadow-lg transition duration-300 ease-out transform hover:scale-105"
                       type="submit" value="Create My Account">
            </form>
        </div>
    </div>
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-6 text-blue-600">Login your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-blue-100 w-full px-3 py-2 border-[1px] rounded-md mb-4 border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 ease-in-out shadow-sm hover:shadow-md hover:bg-blue-50"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-blue-100 w-full px-3 py-2 border-[1px] rounded-md mb-4 border-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300 ease-in-out shadow-sm hover:shadow-md hover:bg-blue-50"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-purple-500 text-white cursor-pointer hover:bg-purple-600 hover:shadow-lg transition duration-300 ease-out transform hover:scale-105"
                       type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
