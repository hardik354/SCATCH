<%- include('./partials/header') %>

<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-400 shadow-lg transition-transform duration-300 ease-out hover:scale-105">
        <span class="inline-block mt-1 mb-1 text-white font-semibold">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="h-screen flex flex-col bg-gradient-to-r from-teal-300 via-indigo-400 to-pink-300 overflow-hidden">
    <div class="container px-10 py-10 flex flex-grow">
        <div class="w-[25%] flex flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 text-indigo-800 hover:text-indigo-900 transition-colors duration-300 ease-in-out transform hover:scale-105" href="">All Products</a>
                <a class="block w-fit mb-2 text-indigo-800 hover:text-indigo-900 transition-colors duration-300 ease-in-out transform hover:scale-105" href="">Create New Product</a>
            </div>
        </div>
        <main class="w-3/4 bg-orange-50 p-6 shadow-lg rounded-lg ml-4 transform transition duration-500 ease-in-out hover:scale-105 hover:shadow-2xl">
            <h2 class="text-xl font-bold mb-4 text-purple-800">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2 text-purple-700">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium text-purple-700">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out bg-pink-50 hover:bg-pink-100 hover:shadow-md">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-teal-50 hover:bg-teal-100 text-teal-800">
                        <input name="price" type="text" placeholder="Product Price" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-teal-50 hover:bg-teal-100 text-teal-800">
                        <input name="discount" type="text" placeholder="Discount Price" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-teal-50 hover:bg-teal-100 text-teal-800">
                    </div>
                </div>

                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2 text-purple-700">Panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-yellow-50 hover:bg-yellow-100 text-yellow-800">
                        <input name="panelcolor" type="text" placeholder="Panel Color" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-yellow-50 hover:bg-yellow-100 text-yellow-800">
                        <input name="textcolor" type="text" placeholder="Text Color" 
                            class="border p-2 rounded w-full border-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-500 transition duration-300 ease-in-out shadow-sm bg-yellow-50 hover:bg-yellow-100 text-yellow-800">
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-purple-500 text-white cursor-pointer transition duration-300 hover:bg-purple-600 hover:shadow-lg transform hover:scale-105" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
